@model Mockbuster.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li><b>Genre:</b> @Model.Genre</li>
    <li><b>Release Date:</b> @Model.ReleaseDate</li>
    <li><b>Date Added:</b> @Model.DateAdded</li>
    <li><b>Number In Stock:</b> @Model.NumberInStock</li>
</ul>

<hr />
@Html.ActionLink("Movies", "Index", "Movies", new { id = 1 }, new { @class = "btn-danger btn-primary btn-lg" })
